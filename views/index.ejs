<% include partials/header %>

<div class="container">

    <header class="jumbotron text-center">
        <div class="container">
            <h1>Campgrounds</h1>
            <p class="lead">View the best campgrounds from all over the world.</p>
            <a class="btn btn-outline-success btn-lg" href="/campgrounds/new" role="button">
                Add new campground</a>
        </div>
    </header>

    <div class="row text-center" id="camp-grid">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-lg-3 col-md-3 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                    <div class="card-body">
                        <h3 class="card-title"><%= campground.name %></h3>
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>">More info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<% include partials/footer %>