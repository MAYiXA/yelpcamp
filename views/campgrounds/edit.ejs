<% include ../partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 m-4 text-center">
    <h1 class="display-4">Edit <%= campground.name %></h1>
  </div>
  <div class="col-8 col-md-6 col-lg-4">
    <form action="/index/<%= campground._id %>/?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="campground[name]"
          value="<%= campground.name %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          value="<%= campground.image %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="price">Price per night</label>
        <input
          class="form-control"
          type="text"
          name="campground[price]"
          value="<%= campground.price %>"
        />
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          value="<%= campground.location %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="descr">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[descr]"
          value="<%= campground.descr %>"
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-success btn-block">Submit</button>
      </div>
    </form>

    <a href="/index/<%= campground._id %>">Go back</a>
  </div>
</div>
<% include ../partials/footer %>
