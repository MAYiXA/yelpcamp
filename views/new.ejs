<% include partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 m-4 text-center">
        <h1 class="display-4">Add a new campground</h1>
    </div>
    <div class="col-8 col-md-6 col-lg-4">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="Solvallen" required>
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="image" placeholder="https://something.here.png" required>
            </div>
            <div class="form-group">
                <label for="cost">Price per night</label>
                <input class="form-control" type="text" name="cost" placeholder="0 sek">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" placeholder="Stockholm" required>
            </div>
            <div class="form-group">
                <label for="descr">Description</label>
                <textarea class="form-control" type="text" name="descr" placeholder="An extraordinary view from the northern part of the Sol Mountain."></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>

        <a href="/campgrounds">Go back</a>
    </div>
</div>
<% include partials/footer %>