<% include ../partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 m-4 text-center">
        <h1 class="display-4">Edit your comment</h1>
    </div>
    <div class="col-8 col-md-6 col-lg-4">
        <form 
        action="/index/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment[text]">Comment</label>
                <textarea 
                class="form-control" 
                name="comment[text]" 
                value="<%= comment.text %>"
                required><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>

        <a href="/index/<%= campground_id %>">Go back</a>
    </div>
</div>
<% include ../partials/footer %>