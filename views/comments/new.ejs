<% include ../partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 m-4 text-center">
        <h1 class="display-4">Add a new comment to <%= campground.name %></h1>
    </div>
    <div class="col-8 col-md-6 col-lg-4">
        <form action="/index/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment[text]">Comment</label>
                <input class="form-control" type="text" name="comment[text]" placeholder="Text" required>
            </div>
            <div class="form-group">
                <label for="comment[author]">Author</label>
                <input class="form-control" type="text" name="comment[author]" placeholder="Name/alias" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
        </form>

        <a href="/index">Go back</a>
    </div>
</div>
<% include ../partials/footer %>